{
	"name": "financial-fns",
	"version": "0.0.6",
	"description": "Library with financial functions, useful calculations and constants",
	"main": "dist/index.js",
	"module": "dist/financial-fns.esm.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/financial-fns.esm.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"prepare": "husky install",
		"test": "jest",
		"test:watch": "jest --watch",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"build": "tsdx build",
		"prepublish": "npm run build",
		"release:patch": "npm run release -- --release-as patch",
		"release:minor": "npm run release -- --release-as minor",
		"release": "standard-version",
		"postrelease": "git push --follow-tags && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ezemgaray/financial-fns.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ezemgaray/financial-fns/issues"
	},
	"homepage": "https://github.com/ezemgaray/financial-fns#readme",
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@types/jest": "^29.2.3",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"rimraf": "^3.0.2",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.0.3",
		"tsdx": "^0.14.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"decimal.js": "^10.4.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"subject-case": [
				2,
				"never",
				[
					"start-case",
					"pascal-case"
				]
			]
		}
	}
}
